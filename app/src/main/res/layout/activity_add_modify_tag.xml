<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddModifyTag"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:id="@+id/LayoutTitres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:elevation="10dp">
        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/policetitres"
            android:textAlignment="center"
            android:textColor="@color/MainMenuTextColor"
            android:elevation="10dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/LayoutTitres">
        <TextView
            android:id="@+id/ListType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/MainMenuTextColor"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ButtonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin">

                </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <Button
            android:id="@+id/AllArts"
            android:layout_width="0sp"
            android:layout_height="80sp"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/AllArts"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/UntaggedArt"
            android:layout_width="0sp"
            android:layout_height="80sp"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/UnTaggedArts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/AllArts"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>